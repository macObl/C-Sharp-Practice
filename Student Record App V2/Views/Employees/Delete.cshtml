@model Lab6.Models.ViewModels.EmployeeRoleSelections


@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Employee ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.employee.Id)
        </dd>
        <dt class="col-sm-2">
            Employee Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.employee.Name)
        </dd>
        <dt class="col-sm-2">
            Network ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.employee.UserName)
        </dd>
        <dt class="col-sm-2">
            Job Title
        </dt>
        @for(int i = 0; i < Model.employee.Roles.Count; i++)
        {
            <dd class="col-sm-10">
                @Model.employee.Roles[i].Role1
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.employee.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

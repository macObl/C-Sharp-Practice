@model Lab6.Models.DataAccess.AcademicRecord

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AcademicRecord</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseCode" />
            <input type="hidden" asp-for="StudentId" />
            <dl class="row">
                <dt class="col-md-2">
                    Course   
                </dt>
                <dd class="col-md-10">
                    @(Model.CourseCode + " - " + Model.CourseCodeNavigation.Title)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-md-2">
                    Student  
                </dt>
                <dd class="col-md-10">
                    @(Model.StudentId + " - " + Model.Student.Name)
                </dd>
            </dl>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
